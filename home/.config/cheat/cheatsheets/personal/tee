# To tee stdout to a file:
ls | tee outfile.txt

# To tee stdout and append to a file:
ls | tee -a outfile.txt

# Append Text to a File Using sudo
echo text | sudo tee -a file

# Use sudo in combination the `tee` command to append text to a file.
echo "PRODUCTION Environment" | sudo tee -a /etc/motd
