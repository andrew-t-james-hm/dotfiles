# heroku

Host heroku.personal
    HostName heroku.com
    UserKnownHostsFile ~/.ssh/known_hosts_heroku
    IdentityFile ~/.ssh/identity.heroku.personal
    IdentitiesOnly yes

Host heroku.ibaset
    HostName heroku.com
    UserKnownHostsFile ~/.ssh/known_hosts_heroku
    IdentityFile ~/.ssh/identity.heroku.ibaset
    IdentitiesOnly yes
