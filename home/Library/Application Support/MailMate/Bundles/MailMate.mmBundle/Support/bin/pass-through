#!/bin/bash

BASH_NO=no . /etc/profile

DIR="/Applications/MailMate.app/Contents/SharedSupport/bin"

if [ ! -f "${DIR}/sundown-orig" ]; then
  cp "${DIR}/sundown" "${DIR}/sundown-orig"
fi

if [ ! -f "${DIR}/sundown-pass-through" ]; then
  touch "${DIR}/sundown-pass-through"
  cat <<EOT >> "${DIR}/sundown-pass-through"
#!/bin/bash

BASH_NO=no . /etc/profile

TMPFILE=\$(mktemp -t sundown_data) || exit 1
cat | perl -pe 's,</?o:[^>]*>,,g' >\${TMPFILE}

cat \${TMPFILE}
EOT
  chmod +x "${DIR}/sundown-pass-through"
fi

cp "${DIR}/sundown-pass-through" "${DIR}/sundown"
