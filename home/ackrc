--smart-case

# lexically sort filenames
--sort-files

--ignore-dir=build
--ignore-dir=dist
--ignore-dir=\.git
--ignore-dir=node_modules
--ignore-dir=components/
--ignore-dir=bower_components/
--type-add
js=.coffee,.json
--type-add
html=.handlebars,.mustache,.hbs
--type-add
css=.stylus,.styl,.less,.sass
--type-add
ruby=.haml,.rake
--type-add
vim=.vimrc

# add types ack doesn't know about
--type-set=MARKDOWN=md,mkd,markdown
--type-set=RDOC=rdoc
--type-set=slim=slim

--type-set=log=.log
--type-set=django=.py,.html
--type-set=less=.less
--type-set=vim=.vim
--type-set=puppet=.pp
--type-set=fe=.html,.js,.less
--type-set=fea=.html,.js,.less,.css
--type-set=docs=.markdown,.md,.mdown,.rst
